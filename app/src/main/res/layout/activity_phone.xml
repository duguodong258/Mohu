<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/style_widthM_heightM"
              android:background="@color/edit_bg"
              android:orientation="vertical">

    <include layout="@layout/layout_title"/>


    <EditText
        android:id="@+id/et_phone_number"
        android:layout_marginTop="10dp"
        style="@style/style_profile_et"/>

    <RelativeLayout
        style="@style/style_widthM_heightW"
        android:layout_marginTop="@dimen/Spacing_1.5dp"
        android:background="@color/white"
        android:paddingRight="@dimen/Spacing_10dp">

        <EditText
            android:id="@+id/et_phone_code"
            style="@style/style_profile_et"/>

        <com.xianrou.mohu.widget.CodeButton
            android:id="@+id/btn_getCode"
            android:text="获取验证码"
            android:padding="@dimen/Spacing_5dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/Spacing_20dp"
            android:layout_centerVertical="true"
            style="@style/style_widthW_heightW"
            android:background="@drawable/btn_getcode"/>
    </RelativeLayout>



</LinearLayout>