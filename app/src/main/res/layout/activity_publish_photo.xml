<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_root"
              android:background="@color/edit_bg"
              style="@style/style_widthM_heightM">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_publish_photo"
        android:padding="@dimen/Spacing_5dp"
        android:background="@color/publish_photo_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Spacing_200dp"/>

    <LinearLayout
        android:layout_below="@id/rv_publish_photo"
        android:layout_marginTop="@dimen/Spacing_20dp"
        android:orientation="vertical"
        style="@style/style_widthM_heightW">
        <RelativeLayout
            android:layout_marginTop="@dimen/Spacing_1dp"
            style="@style/style_edit_rl">
            <TextView
                android:text="@string/alpha"
                style="@style/style_edit_tv"/>
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_centerInParent="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="30"/>
            <TextView
                android:id="@+id/tv_percentage"
                android:layout_alignParentRight="true"
                style="@style/style_edit_tv1"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_award_amount"
            android:layout_marginTop="@dimen/Spacing_1dp"
            style="@style/style_edit_rl">
            <TextView
                android:text="@string/award_amount"
                style="@style/style_edit_tv"/>
            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_award_amount"
                android:text="999"
                android:layout_toLeftOf="@id/iv_arrow"
                style="@style/style_edit_tv1"/>
            <TextView
                android:id="@+id/tv_award_amount_type"
                android:layout_toLeftOf="@id/tv_award_amount"
                android:text="@string/award_amount_type"
                style="@style/style_edit_tv1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_photo_description"
            android:layout_marginTop="@dimen/Spacing_1dp"
            style="@style/style_edit_rl">
            <TextView
                android:text="@string/photo_description"
                style="@style/style_edit_tv"/>
            <ImageView
                android:id="@+id/iv_arrows"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_description"
                android:text="我的最爱"
                android:layout_toLeftOf="@id/iv_arrows"
                style="@style/style_edit_tv1"/>
        </RelativeLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_SaveShare"
        android:text="@string/save_share"
        android:layout_marginBottom="@dimen/Spacing_10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Spacing_40dp"/>

    <Button
        android:id="@+id/btn_adjustPhoto"
        android:text="@string/adjustPhoto"
        android:layout_above="@id/btn_SaveShare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Spacing_40dp"/>
</RelativeLayout>