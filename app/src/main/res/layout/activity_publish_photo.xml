<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_root"
              android:background="@color/edit_bg"
              style="@style/style_widthM_heightM">
    <ImageView
        android:id="@+id/iv_img"
        android:src="@drawable/zs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Spacing_200dp"/>

    <LinearLayout
        android:layout_below="@id/iv_img"
        android:layout_marginTop="@dimen/Spacing_20dp"
        android:orientation="vertical"
        style="@style/style_widthM_heightW">
        <RelativeLayout
            android:layout_marginTop="@dimen/Spacing_1dp"
            style="@style/edit_rl_style">
            <TextView
                android:text="透明度"
                style="@style/edit_tv_style"/>
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_centerInParent="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="30"/>
            <TextView
                android:id="@+id/tv_percentage"
                android:text="80%"
                android:layout_alignParentRight="true"
                style="@style/edit_tv1_style"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_award_amount"
            android:layout_marginTop="@dimen/Spacing_1dp"
            style="@style/edit_rl_style">
            <TextView
                android:text="打赏金额"
                style="@style/edit_tv_style"/>
            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_award_amount"
                android:text="999"
                android:layout_toLeftOf="@id/iv_arrow"
                style="@style/edit_tv1_style"/>
            <TextView
                android:id="@+id/tv_award_amount_type"
                android:layout_toLeftOf="@id/tv_award_amount"
                android:text="固定"
                style="@style/edit_tv1_style"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_photo_description"
            android:layout_marginTop="@dimen/Spacing_1dp"
            style="@style/edit_rl_style">
            <TextView
                android:text="相册描述"
                style="@style/edit_tv_style"/>
            <ImageView
                android:id="@+id/iv_arrows"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_description"
                android:text="我的最爱"
                android:layout_toLeftOf="@id/iv_arrows"
                style="@style/edit_tv1_style"/>
        </RelativeLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_SaveShare"
        android:text="保存分享"
        android:layout_marginBottom="@dimen/Spacing_10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Spacing_40dp"/>

    <Button
        android:id="@+id/btn_adjustPhoto"
        android:text="调整照片"
        android:layout_above="@id/btn_SaveShare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Spacing_40dp"/>
</RelativeLayout>