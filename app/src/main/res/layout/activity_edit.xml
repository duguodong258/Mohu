<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/edit_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/Spacing_50dp">
        <TextView
            android:id="@+id/tv_award_amount"
            android:text="打赏金额"
            android:textColor="@color/edit_tvColor"
            android:layout_centerVertical="true"
            android:textSize="@dimen/fontSize_16sp"
            android:layout_marginLeft="@dimen/Spacing_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_award_amount_type"
            android:text="随机"
            android:textColor="@color/edit_tvColorHint"
            android:textSize="@dimen/fontSize_14sp"
            android:layout_toRightOf="@id/tv_award_amount"
            android:layout_marginLeft="@dimen/Spacing_10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_minAmount"
        android:paddingLeft="@dimen/Spacing_10dp"
        android:hint="请输入最低打赏金额"
        android:background="@color/white"
        android:textColorHint="@color/edit_tvColorHint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Spacing_40dp"/>

    <EditText
        android:id="@+id/et_maxAmount"
        android:paddingLeft="@dimen/Spacing_10dp"
        android:hint="请输入最高打赏金额"
        android:layout_marginTop="@dimen/Spacing_1dp"
        android:background="@color/white"
        android:textColorHint="@color/edit_tvColorHint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Spacing_40dp"
        android:visibility="gone"/>
</LinearLayout>